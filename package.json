{
  "name": "cbl-so",
  "version": "1.0.0",
  "description": "CBL Sales Orders - TSO order management system",
  "private": true,
  "scripts": {
    "start:backend": "cd backend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && set PORT=3002 && npm start",
    "dev:frontend": "cd frontend && set PORT=3002 && npm start",
    "start:all": "concurrently \"npm run dev:backend\" \"npm run start:frontend\"",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "lint:deadcode:backend": "cd backend && npx eslint \"**/*.js\"",
    "lint:deadcode:frontend": "cd frontend && npx eslint \"src/**/*.{js,jsx}\"",
    "lint:deadcode:all": "npm run lint:deadcode:backend && npm run lint:deadcode:frontend",
    "depcheck:backend": "cd backend && npx depcheck",
    "depcheck:frontend": "cd frontend && npx depcheck",
    "test:workflow": "node project_tools_deletable/test_scripts/test-workflow.js",
    "test:workflow:docker": "$env:API_URL=\"http://localhost:3002\"; node project_tools_deletable/test_scripts/test-workflow.js",
    "test:workflow:1": "node project_tools_deletable/test_scripts/test-workflow.js 1",
    "test:workflow:2": "node project_tools_deletable/test_scripts/test-workflow.js 2",
    "test:workflow:3": "node project_tools_deletable/test_scripts/test-workflow.js 3",
    "test:workflow:all": "node project_tools_deletable/test_scripts/test-workflow.js all"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "keywords": [
    "sales",
    "order",
    "tso",
    "battery"
  ],
  "author": "CBL",
  "license": "MIT"
}

