{
  "name": "cbl-sales-order",
  "version": "1.0.0",
  "description": "CBL Sales Order - TSO order management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:backend": "node server.js",
    "start:frontend": "cd frontend && set PORT=3002 && npm start",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "sales",
    "order",
    "tso",
    "battery"
  ],
  "author": "CBL",
  "license": "MIT"
}
